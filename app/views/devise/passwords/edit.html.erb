<h2 class="big">Dein Passwort ändern</h2>
<div class="user_form">
  <p class="action_call"><%= t('.call_to_action_1') %></p>
  <p class="action_call"><%= t('.call_to_action_2') %></p>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => "form" }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "Neues Passwort" %><br />
  <%= f.password_field :password, :autofocus => true %></div>

  <div><%= f.label :password_confirmation, "Neues Passwort bestätigen" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.button "Passwort ändern", :class => 'button' %></div>
<% end %>
<br />

<%= render "devise/shared/links" %>
