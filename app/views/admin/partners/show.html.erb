<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to 'Alle Partner', admin_partners_path %></li>
      <li><%= link_to 'Neuen Partner anlegen', new_admin_partner_path %></li>
      <li class="active"><%= link_to 'Partner', admin_partner_path(@partner) %></li>
      <li><%= link_to 'Diesen Partner bearbeiten', edit_admin_partner_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2>Partner <%= @partner.try(:fullname) %>  <%= "- #{@partner.try(:firma)}" if @partner.try(:firma) %> </h2>
    <div class="inner">
      <%= @partner.try(:adresse) %>
      -<br />
      <%= @partner.try(:notiz) %>
      <br>
      <p>
        Partner Link:
        <div class="form">
          <input value="<%= root_url(refcode: @partner.try(:refcode) ) %>" type="text" class="text_field">
        </div>
      </p>
    </div>

  </div>
</div>