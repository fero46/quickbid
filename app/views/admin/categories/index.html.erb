<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="active first"><%= link_to 'Alle Kategorien', admin_categories_path %></li>
      <li><%= link_to 'Neues Kategorie herstellen', new_admin_category_path %></li>
    </ul>
  </div>
  <div class="content">
    <h2>Alle Kategorien</h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th></th>
          <th>Name</th>
          <th></th>
        </tr>
        <%for category in @categories %>
          <tr>
            <td><%= image_tag category.try(:image).try(:thumb) %></td>
            <td><%= category.try(:name) %></td>
            <td><%= link_to 'Details', admin_category_path(category) %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>