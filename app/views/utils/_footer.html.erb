<div class="footer normal_padding">
  <ul class="infoblock">
    <li class="secure">
      <h5><%= t(".secure_shoping.title") %></h5>
      <p><%= t(".secure_shoping.description") %></p>
    </li>
    <li class="service">
      <h5><%= t(".customer_service.title") %></h5>
      <p><%= t(".customer_service.description") %></p>
    </li>
    <li class="garantie last">
      <h5><%= t(".warranty.title") %></h5>
      <p><%= t(".warranty.description") %></p>
    </li>
    <div class="clear"></div>
  </ul>
  <div class="blocks">
    <div class="about grey">
      <% @about = Page.find_by_name(:about) %>
      <h2 class="title_block"><%= @about.try(:title) %></h2>
      <%= @about.try(:body).try(:html_safe) %> 
    </div>

    <%= render "utils/twitter" %>

    <%= render "utils/facebook" %>
    <div class="clear"></div>
  </div>

  <div class="links">
    <div class="link_block">
      <h3><%= t('.info_title') %></h3>
      <ul>
        <li><%= link_to t('.about'), page_path('about') %></li>
        <li><%= link_to t('.privacy'), page_path('privacy') %></li>
        <li><%= link_to t('.terms'), page_path('terms') %></li>
      </li>
    </div>
    <div class="link_block">
      <h3><%= t('.service_title') %></h3>
      <ul>
        <li><%= link_to t('.faq'), page_path('faq') %></li>
        <li><%= link_to t('.impressum'), page_path('impressum') %></li>
        <li><%= link_to t('.partner'), page_path('partner') %></li>
      </li>
    </div>
    <div class="clear"></div>
  </div>
</div>

